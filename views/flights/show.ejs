<table>
    <thead>
      <tr>
        <th>Flight Number</th>
        <th>Airline</th>
        <th>Aiport</th>
        <th>Departs</th>
        <th>Arrives</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= flight.flightNo %></td>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.departs.toLocaleDateString() %></td>
        </tr>

       
         <form action="/flights/<%=flight._id%>" method="POST">
        <label>Add destination<label>
        <select name="airport">
        <option value="AUS">Austin</option>
        <option value="DAL">Dallas</option>
        <option value="LAX">L.A.</option>
        <option value="SEA">Seatle</option>
      </select>   
      <button>Click to add destination</button>
         </form>

         <% tickets.forEach(function(t){%>
         <tr>
         <td>Assigned Seat Number</td>
         <td><%= t.seat%></td>
         <td>Price</td>
         <td>t.price</td>
         </tr>
         <% });%>
         
         <form action="/tickets/<%=flight._id%>/new" method="GET">
        <button>Add new Ticket</button>
        </form>
      </tbody>
    </table>